<phone:PhoneApplicationPage 
    x:Class="WordPress.BlogPanoramaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:WordPress"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False">
	<phone:PhoneApplicationPage.Resources>
		<Style x:Key="commentsPanoramaItemStyle" TargetType="controls:PanoramaItem">
			<Setter Property="CacheMode" Value="BitmapCache"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			<Setter Property="VerticalContentAlignment" Value="Stretch"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="controls:PanoramaItem">
						<Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
							<Grid.RowDefinitions>
								<RowDefinition Height="auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
							<Image HorizontalAlignment="Right" Height="120" Source="Images/panoramaComments.png" Stretch="Fill" VerticalAlignment="Top" Width="167"/>
							<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
								<ContentControl.RenderTransform>
									<TranslateTransform x:Name="headerTransform"/>
								</ContentControl.RenderTransform>
							</ContentControl>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
        <Style x:Key="postsPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Image HorizontalAlignment="Right" Height="120" Source="Images/panoramaPosts.png" Stretch="Fill" VerticalAlignment="Top" Width="167"/>
                            <ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
                                <ContentControl.RenderTransform>
                                    <TranslateTransform x:Name="headerTransform"/>
                                </ContentControl.RenderTransform>
                            </ContentControl>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="pagesPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Image HorizontalAlignment="Right" Height="120" Source="Images/panoramaPages.png" Stretch="Fill" VerticalAlignment="Top" Width="167"/>
                            <ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
                                <ContentControl.RenderTransform>
                                    <TranslateTransform x:Name="headerTransform"/>
                                </ContentControl.RenderTransform>
                            </ContentControl>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="statsPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Image HorizontalAlignment="Right" Height="120" Source="Images/panoramaStats.png" Stretch="Fill" VerticalAlignment="Top" Width="167"/>
                            <ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
                                <ContentControl.RenderTransform>
                                    <TranslateTransform x:Name="headerTransform"/>
                                </ContentControl.RenderTransform>
                            </ContentControl>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:CommentStatusToBrushConverter x:Key="CommentStatusToBrushConverter"></local:CommentStatusToBrushConverter>
        
    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot contains the root grid where all other page content is placed-->
    <Grid x:Name="LayoutRoot" Style="{StaticResource LayoutRootStyle}">
        
        <controls:Panorama Title="{Binding CurrentBlog.BlogName}">
        	<controls:Panorama.Foreground>
        		<SolidColorBrush Color="{StaticResource WordPressBlue}"/>
        	</controls:Panorama.Foreground>

            <!--comments Panorama item -->
            <controls:PanoramaItem Header="{Binding Path=PageTitles.Comments, Source={StaticResource StringTable}}" Style="{StaticResource commentsPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="commentsListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Comments}" Height="435"
                             SelectionChanged="commentsListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid MaxHeight="200" Margin="0,0,0,15">
                            		<Grid.ColumnDefinitions>
                            			<ColumnDefinition Width="Auto"/>
                            			<ColumnDefinition Width="*"/>
                            		</Grid.ColumnDefinitions>
                            		<Grid.RowDefinitions>
                            			<RowDefinition Height="Auto"/>
                            			<RowDefinition Height="Auto"/>
                            		</Grid.RowDefinitions>
                            		<Image Grid.Column="0" Grid.Row="0" Height="75" Width="75" Source="{Binding GravatarUrl}" Margin="0,0,10,10"/>
                            		<StackPanel Grid.Column="1" Grid.Row="0">
                            			<TextBlock x:Name="authorTextBlock" Text="{Binding Author}" FontSize="26.667" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="authorEmailTextBlock" Text="{Binding AuthorEmail}" FontSize="21.333" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="postTextBlock" Margin="0" FontSize="21.333" Text="{Binding PostTitle}">
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                                    </StackPanel>
                            		<StackPanel Grid.ColumnSpan="2" Margin="0" Orientation="Vertical" Grid.Row="1" d:LayoutOverrides="Width">
                            			<TextBlock x:Name="contentTextBlock" Text="{Binding Content}" FontSize="26.667" MaxHeight="40" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="statusTextBlock" FontSize="21.333" Text="{Binding CommentStatus}" 
                            				Foreground="{Binding CommentStatus, Converter={StaticResource CommentStatusToBrushConverter}}"
                                                   />
                            		</StackPanel>
                            	</Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="editCommentsButton" Grid.Row="1" Grid.Column="0" Content="{Binding Path=ControlsText.Edit, Source={StaticResource StringTable}}" BorderThickness="0" Style="{StaticResource BasicButtonStyle}"/>
                    <Button x:Name="refreshCommentsButton" Grid.Row="1" Grid.Column="2" Content="{Binding Path=ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshCommentsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--posts Panorama item-->
            <controls:PanoramaItem Header="{Binding Path=PageTitles.Posts, Source={StaticResource StringTable}}" Style="{StaticResource postsPanoramaItemStyle}" >
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ListBox x:Name="postsListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Posts}" Height="435"
                             SelectionChanged="postsListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,17" Width="432">
                                    <TextBlock x:Name="postTitleTextBlock" Text="{Binding Title}" Style="{StaticResource PhoneTextExtraLargeStyle}" FontSize="32">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock x:Name="postDateCreatedTextBlock" Text="{Binding DateCreated}" Margin="12,-6,12,0" Style="{StaticResource PhoneTextSubtleStyle}">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="newPostButton" Grid.Row="1" Grid.Column="0" Content="{Binding Path=ControlsText.Add, Source={StaticResource StringTable}}" BorderThickness="0" Click="newPostButton_Click" Style="{StaticResource BasicButtonStyle}" />
                    <Button x:Name="refreshPostsButton" Grid.Row="1" Grid.Column="2" Content="{Binding Path=ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshPostsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--pages Panorama item-->
            <controls:PanoramaItem Header="{Binding Path=PageTitles.Pages, Source={StaticResource StringTable}}" Style="{StaticResource pagesPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="pagesListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Pages}" Height="435"
                             SelectionChanged="pagesListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,17" Width="432">
                                    <TextBlock x:Name="pageTitleTextBlock" Text="{Binding PageTitle}" Style="{StaticResource PhoneTextExtraLargeStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" FontSize="32">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock x:Name="pageDateCreatedTextBlock" Text="{Binding DateCreated}" Style="{StaticResource PhoneTextExtraLargeStyle}" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>                                    
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="newPageButton" Grid.Row="1" Grid.Column="0" Content="{Binding Path=ControlsText.Add, Source={StaticResource StringTable}}" BorderThickness="0" Click="newPageButton_Click" Style="{StaticResource BasicButtonStyle}" />
                    <Button x:Name="refreshPagesButton" Grid.Row="1" Grid.Column="2" Content="{Binding Path=ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshPagesButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--stats Panorama item-->
            <controls:PanoramaItem Header="{Binding Path=PageTitles.Stats, Source={StaticResource StringTable}}" Style="{StaticResource statsPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>                        
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        
                        <ComboBox x:Name="statisticComboBox" Width="150" Foreground="Black" >
                            <ComboBox.Items>
                                <ComboBoxItem Content="Views" IsSelected="True"/>
                                <ComboBoxItem Content="Post Views"/>
                                <ComboBoxItem Content="Search Terms"/>
                                <ComboBoxItem Content="Clicks"/>
                            </ComboBox.Items>                            
                        </ComboBox>
                        <ComboBox x:Name="rangeComboBox" Width="150" Foreground="Black">
                            <ComboBox.Items>
                                <ComboBoxItem Content="7 Days" IsSelected="True"/>
                                <ComboBoxItem Content="30 Days"/>
                                <ComboBoxItem Content="Quarter"/>
                                <ComboBoxItem Content="Year"/>
                                <ComboBoxItem Content="All Time"/>
                            </ComboBox.Items>                            
                        </ComboBox>
                        <Button x:Name="statsButton" Content="Go" Click="statsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                    </StackPanel>
                    <ListBox x:Name="statsListBox" Grid.Row="1"/>
                </Grid>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>

    <!--Panorama-based applications should not show an ApplicationBar-->

</phone:PhoneApplicationPage>