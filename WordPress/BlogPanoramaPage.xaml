<phone:PhoneApplicationPage 
    x:Class="WordPress.BlogPanoramaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:WordPress"
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="800"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="False">
	<phone:PhoneApplicationPage.Resources>
        <Style x:Key="actionsPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width">
                            	<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
                            		<ContentControl.RenderTransform>
                            			<TranslateTransform x:Name="headerTransform"/>
                            		</ContentControl.RenderTransform>
                            	</ContentControl>
                            	<Image Source="Images/panoramaActions.png" Stretch="None" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="commentsPanoramaItemStyle" TargetType="controls:PanoramaItem">
			<Setter Property="CacheMode" Value="BitmapCache"/>
			<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
			<Setter Property="VerticalContentAlignment" Value="Stretch"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="controls:PanoramaItem">
						<Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
							<Grid.RowDefinitions>
								<RowDefinition Height="auto"/>
								<RowDefinition Height="*"/>
							</Grid.RowDefinitions>
							<ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
							<StackPanel Orientation="Horizontal" d:LayoutOverrides="Width">
								<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" HorizontalAlignment="Left" Margin="0,8,0,16">
									<ContentControl.RenderTransform>
										<TranslateTransform x:Name="headerTransform"/>
									</ContentControl.RenderTransform>
								</ContentControl>
								<Image Source="Images/panoramaComments.png" Stretch="None" VerticalAlignment="Center"/>
							</StackPanel>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
        <Style x:Key="postsPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width">
                            	<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" Margin="0,8,0,16">
                            		<ContentControl.RenderTransform>
                            			<TranslateTransform x:Name="headerTransform"/>
                            		</ContentControl.RenderTransform>
                            	</ContentControl>
                            	<Image Source="Images/panoramaPosts.png" Stretch="None" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="pagesPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width">
                            	<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" Margin="0,8,0,16">
                            		<ContentControl.RenderTransform>
                            			<TranslateTransform x:Name="headerTransform"/>
                            		</ContentControl.RenderTransform>
                            	</ContentControl>
                            	<Image Source="Images/panoramaPages.png" Stretch="None" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="statsPanoramaItemStyle" TargetType="controls:PanoramaItem">
            <Setter Property="CacheMode" Value="BitmapCache"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="controls:PanoramaItem">
                        <Grid Background="{TemplateBinding Background}" Margin="12,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" Grid.Row="1" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <StackPanel Orientation="Horizontal" d:LayoutOverrides="Width">
                            	<ContentControl x:Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}" FontFamily="{StaticResource PhoneFontFamilySemiLight}" Margin="0,8,0,16">
                            		<ContentControl.RenderTransform>
                            			<TranslateTransform x:Name="headerTransform"/>
                            		</ContentControl.RenderTransform>
                            	</ContentControl>
                            	<Image Source="Images/panoramaStats.png" Stretch="None" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:CommentStatusToBrushConverter x:Key="CommentStatusToBrushConverter"></local:CommentStatusToBrushConverter>
        
        <Style x:Key="TileButtonTemplate" TargetType="Button">
        	<Setter Property="Background" Value="Transparent"/>
        	<Setter Property="BorderBrush" Value="{StaticResource PhoneForegroundBrush}"/>
        	<Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
        	<Setter Property="BorderThickness" Value="{StaticResource PhoneBorderThickness}"/>
        	<Setter Property="FontFamily" Value="{StaticResource PhoneFontFamilySemiBold}"/>
        	<Setter Property="FontSize" Value="{StaticResource PhoneFontSizeMediumLarge}"/>
        	<Setter Property="Padding" Value="10,3,10,5"/>
        	<Setter Property="Template">
        		<Setter.Value>
        			<ControlTemplate TargetType="Button">
        				<Grid Background="Transparent">
        					<VisualStateManager.VisualStateGroups>
        						<VisualStateGroup x:Name="CommonStates">
        							<VisualState x:Name="Normal"/>
        							<VisualState x:Name="MouseOver"/>
        							<VisualState x:Name="Pressed">
        								<Storyboard>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentContainer">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneBackgroundBrush}"/>
        									</ObjectAnimationUsingKeyFrames>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="ButtonBackground">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneForegroundBrush}"/>
        									</ObjectAnimationUsingKeyFrames>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ButtonBackground">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneForegroundBrush}"/>
        									</ObjectAnimationUsingKeyFrames>
        								</Storyboard>
        							</VisualState>
        							<VisualState x:Name="Disabled">
        								<Storyboard>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentContainer">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneDisabledBrush}"/>
        									</ObjectAnimationUsingKeyFrames>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="ButtonBackground">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PhoneDisabledBrush}"/>
        									</ObjectAnimationUsingKeyFrames>
        									<ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Background" Storyboard.TargetName="ButtonBackground">
        										<DiscreteObjectKeyFrame KeyTime="0" Value="Transparent"/>
        									</ObjectAnimationUsingKeyFrames>
        								</Storyboard>
        							</VisualState>
        						</VisualStateGroup>
        					</VisualStateManager.VisualStateGroups>
        					<Border x:Name="ButtonBackground" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" CornerRadius="0" Margin="5">
        						<ContentControl x:Name="ContentContainer" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
        					</Border>
        				</Grid>
        			</ControlTemplate>
        		</Setter.Value>
        	</Setter>
        </Style>
        
    </phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot contains the root grid where all other page content is placed-->
    <Grid x:Name="LayoutRoot" Style="{StaticResource LayoutRootStyle}">
        
        <controls:Panorama Title="{Binding CurrentBlog.BlogName}">
        	<controls:Panorama.Foreground>
        		<SolidColorBrush Color="{StaticResource WordPressBlue}"/>
        	</controls:Panorama.Foreground>

            <!--comments Panorama item -->
            <controls:PanoramaItem Header="{Binding PageTitles.Actions, Source={StaticResource StringTable}}" Style="{StaticResource actionsPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                	
                    <Button x:Name="refreshButton" Height="200" Margin="0" 
                            VerticalAlignment="Top" BorderBrush="{x:Null}" BorderThickness="0"
                            Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Right" HorizontalAlignment="Left" 
                            Style="{StaticResource TileButtonTemplate}" Width="200">
                		<Button.Background>
                			<SolidColorBrush Color="{StaticResource WordPressBlue}"/>
                		</Button.Background>
                        <StackPanel Height="186" Width="188" >
                    		<Image Source="Images/actionsRefresh.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    		<TextBlock Text="{Binding ControlsText.Refresh, Source={StaticResource StringTable}}" TextWrapping="Wrap" 
                    			VerticalAlignment="Bottom" Margin="0,85,10,0" HorizontalAlignment="Right" 
                    			TextAlignment="Right"/>
                    	</StackPanel>
                	</Button>

                    <Button x:Name="moderateButton" Height="200" Margin="0" 
                            VerticalAlignment="Top" BorderBrush="{x:Null}" BorderThickness="0"
                            Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Right" HorizontalAlignment="Left" 
                            Style="{StaticResource TileButtonTemplate}" Width="200">
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource WordPressBlue}"/>
                        </Button.Background>
                        <StackPanel Height="186" Width="188" >
                            <Image Source="Images/actionsModerate.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding ControlsText.ModerateComments, Source={StaticResource StringTable}}" TextWrapping="Wrap" 
                    			VerticalAlignment="Bottom" Margin="0,52,10,0" HorizontalAlignment="Right" 
                    			TextAlignment="Right"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="createPostButton" Height="200" Margin="0" 
                            VerticalAlignment="Top" BorderBrush="{x:Null}" BorderThickness="0"
                            Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Right" HorizontalAlignment="Left" 
                            Style="{StaticResource TileButtonTemplate}" Width="200">
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource WordPressBlue}"/>
                        </Button.Background>
                        <StackPanel Height="186" Width="188" >
                            <Image Source="Images/actionsEdit.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding ControlsText.Write, Source={StaticResource StringTable}}" TextWrapping="Wrap" 
                    			VerticalAlignment="Bottom" Margin="0,85,10,0" HorizontalAlignment="Right" 
                    			Width="{Binding Width, ElementName=grid}" TextAlignment="Right"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="createPageButton"  Height="200" Margin="0" 
                            VerticalAlignment="Top" BorderBrush="{x:Null}" BorderThickness="0"
                            Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Right" HorizontalAlignment="Left" 
                            Style="{StaticResource TileButtonTemplate}" Width="200">
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource WordPressBlue}"/>
                        </Button.Background>
                        <StackPanel Height="186" Width="188" >
                            <Image Source="Images/actionsAddPg.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding ControlsText.AddAPage, Source={StaticResource StringTable}}" TextWrapping="Wrap" 
                    			VerticalAlignment="Bottom" Margin="0,85,10,0" HorizontalAlignment="Right" 
                    			TextAlignment="Right"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="settingsButton" HorizontalAlignment="Left" 
                            Height="80" Margin="0" VerticalAlignment="Top" Width="400" BorderBrush="{x:Null}" BorderThickness="0"
                            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                            Style="{StaticResource TileButtonTemplate}">
                        <Button.Background>
                            <SolidColorBrush Color="{StaticResource WordPressBlue}"/>
                        </Button.Background>
                        <Button.Content>
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0" Source="Images/actionsSettings.png" HorizontalAlignment="Left" Margin="-195,0,0,0" d:LayoutOverrides="HorizontalAlignment" VerticalAlignment="Top" Stretch="None" />
                                <TextBlock Grid.Column="1" Text="{Binding ControlsText.BlogSettings, 
                                    Source={StaticResource StringTable}}" TextAlignment="Right" HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom" Margin="0,0,-185,0" d:LayoutOverrides="HorizontalAlignment"/>
                            </Grid>
                            
                        </Button.Content>
                    </Button>                    
                </Grid>
                
            </controls:PanoramaItem>

            <!--comments Panorama item -->
            <controls:PanoramaItem Header="{Binding PageTitles.Comments, Source={StaticResource StringTable}}" Style="{StaticResource commentsPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="commentsListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Comments}" Height="435"
                             SelectionChanged="commentsListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid MaxHeight="200" Margin="0,0,0,15">
                            		<Grid.ColumnDefinitions>
                            			<ColumnDefinition Width="Auto"/>
                            			<ColumnDefinition Width="*"/>
                            		</Grid.ColumnDefinitions>
                            		<Grid.RowDefinitions>
                            			<RowDefinition Height="Auto"/>
                            			<RowDefinition Height="Auto"/>
                            		</Grid.RowDefinitions>
                            		<Image Grid.Column="0" Grid.Row="0" Height="75" Width="75" Source="{Binding GravatarUrl}" Margin="0,0,10,10"/>
                            		<StackPanel Grid.Column="1" Grid.Row="0">
                            			<TextBlock x:Name="authorTextBlock" Text="{Binding Author}" FontSize="26.667" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="authorEmailTextBlock" Text="{Binding AuthorEmail}" FontSize="21.333" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="postTextBlock" Margin="0" FontSize="21.333" Text="{Binding PostTitle}">
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                                    </StackPanel>
                            		<StackPanel Grid.ColumnSpan="2" Margin="0" Orientation="Vertical" Grid.Row="1" d:LayoutOverrides="Width">
                            			<TextBlock x:Name="contentTextBlock" Text="{Binding Content}" FontSize="26.667" MaxHeight="40" >
                            				<TextBlock.Foreground>
                            					<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                            				</TextBlock.Foreground>
                            			</TextBlock>
                            			<TextBlock x:Name="statusTextBlock" FontSize="21.333" Text="{Binding CommentStatus}" 
                            				Foreground="{Binding CommentStatus, Converter={StaticResource CommentStatusToBrushConverter}}"
                                                   />
                            		</StackPanel>
                            	</Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="editCommentsButton" Grid.Row="1" Grid.Column="0" Content="{Binding ControlsText.Edit, Source={StaticResource StringTable}}" BorderThickness="0" Style="{StaticResource BasicButtonStyle}"/>
                    <Button x:Name="refreshCommentsButton" Grid.Row="1" Grid.Column="2" Content="{Binding ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshCommentsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--posts Panorama item-->
            <controls:PanoramaItem Header="{Binding PageTitles.Posts, Source={StaticResource StringTable}}" Style="{StaticResource postsPanoramaItemStyle}" >
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ListBox x:Name="postsListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Posts}" Height="435"
                             SelectionChanged="postsListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,17" Width="432">
                                    <TextBlock x:Name="postTitleTextBlock" Text="{Binding Title}" Style="{StaticResource PhoneTextExtraLargeStyle}" FontSize="32">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock x:Name="postDateCreatedTextBlock" Text="{Binding DateCreated}" Margin="12,-6,12,0" Style="{StaticResource PhoneTextSubtleStyle}">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="newPostButton" Grid.Row="1" Grid.Column="0" Content="{Binding ControlsText.Add, Source={StaticResource StringTable}}" BorderThickness="0" Click="newPostButton_Click" Style="{StaticResource BasicButtonStyle}" />
                    <Button x:Name="refreshPostsButton" Grid.Row="1" Grid.Column="2" Content="{Binding ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshPostsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--pages Panorama item-->
            <controls:PanoramaItem Header="{Binding PageTitles.Pages, Source={StaticResource StringTable}}" Style="{StaticResource pagesPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ListBox x:Name="pagesListBox" Grid.Row="0" Grid.ColumnSpan="3" ItemsSource="{Binding Pages}" Height="435"
                             SelectionChanged="pagesListBox_SelectionChanged"
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,17" Width="432">
                                    <TextBlock x:Name="pageTitleTextBlock" Text="{Binding PageTitle}" Style="{StaticResource PhoneTextExtraLargeStyle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0" FontSize="32">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>
                                    <TextBlock x:Name="pageDateCreatedTextBlock" Text="{Binding DateCreated}" Style="{StaticResource PhoneTextExtraLargeStyle}" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18.667">
                                    	<TextBlock.Foreground>
                                    		<SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                                    	</TextBlock.Foreground>
                                    </TextBlock>                                    
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button x:Name="newPageButton" Grid.Row="1" Grid.Column="0" Content="{Binding ControlsText.Add, Source={StaticResource StringTable}}" BorderThickness="0" Click="newPageButton_Click" Style="{StaticResource BasicButtonStyle}" />
                    <Button x:Name="refreshPagesButton" Grid.Row="1" Grid.Column="2" Content="{Binding ControlsText.Refresh, Source={StaticResource StringTable}}" BorderThickness="0" Click="refreshPagesButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                </Grid>
            </controls:PanoramaItem>

            <!--stats Panorama item-->
            <controls:PanoramaItem Header="{Binding PageTitles.Stats, Source={StaticResource StringTable}}" Style="{StaticResource statsPanoramaItemStyle}">
                <controls:PanoramaItem.Foreground>
                    <SolidColorBrush Color="{StaticResource WordPressGrey}"/>
                </controls:PanoramaItem.Foreground>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>                        
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        
                        <ComboBox x:Name="statisticComboBox" Width="150" Foreground="Black" >
                        	<ComboBoxItem Content="Views" IsSelected="True"/>
                        	<ComboBoxItem Content="Post Views"/>
                        	<ComboBoxItem Content="Search Terms"/>
                        	<ComboBoxItem Content="Clicks"/>                            
                        </ComboBox>
                        <ComboBox x:Name="rangeComboBox" Width="150" Foreground="Black">
                        	<ComboBoxItem Content="7 Days" IsSelected="True"/>
                        	<ComboBoxItem Content="30 Days"/>
                        	<ComboBoxItem Content="Quarter"/>
                        	<ComboBoxItem Content="Year"/>
                        	<ComboBoxItem Content="All Time"/>                            
                        </ComboBox>
                        <Button x:Name="statsButton" Content="Go" Click="statsButton_Click" Style="{StaticResource BasicButtonStyle}"/>
                    </StackPanel>
                    <ListBox x:Name="statsListBox" Grid.Row="1"/>
                </Grid>
            </controls:PanoramaItem>
        </controls:Panorama>
    </Grid>

    <!--Panorama-based applications should not show an ApplicationBar-->

</phone:PhoneApplicationPage>